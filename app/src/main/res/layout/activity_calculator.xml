<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Calculator"
    tools:ignore="ExtraText"
    android:orientation="vertical">
    <EditText
        android:id="@+id/numbersInput"
        android:layout_height="70dp"
        android:layout_width="match_parent"
        android:inputType="none"
        android:enabled="false"
        android:gravity="end"
        android:text="0"
        android:backgroundTint="@android:color/holo_red_dark"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="40dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="10dp">


            <Button
                android:id="@+id/butoni1"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="1"
                />
            <Button
                android:id="@+id/butoni2"
                android:layout_width="70dp"
                android:layout_margin="10dp"
                android:layout_height="wrap_content"
                android:text="2"
                />
            <Button
                android:id="@+id/butoni3"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="3"
                />
            <Button
                android:id="@+id/butoniPlus"
                android:layout_width="100dp"
                android:layout_margin="10dp"
                android:layout_height="wrap_content"
                android:text="+"
                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="10dp">

            <Button
                android:id="@+id/butoni4"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="4"
                />
            <Button
                android:id="@+id/butoni5"
                android:layout_width="70dp"
                android:layout_margin="10dp"
                android:layout_height="wrap_content"
                android:text="5"
                />
            <Button
                android:id="@+id/butoni6"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="6"
                />
            <Button
                android:id="@+id/butoniMinus"
                android:layout_width="100dp"
                android:layout_margin="10dp"
                android:layout_height="wrap_content"
                android:text="-"
                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="10dp">

            <Button
                android:id="@+id/butoni7"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="7"
                />
            <Button
                android:id="@+id/butoni8"
                android:layout_width="70dp"
                android:layout_margin="10dp"
                android:layout_height="wrap_content"
                android:text="8"
                />
            <Button
                android:id="@+id/butoni9"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="9"
                />
            <Button
                android:id="@+id/butoniShumezim"
                android:layout_width="100dp"
                android:layout_margin="10dp"
                android:layout_height="wrap_content"
                android:text="*"
                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="10dp">


            <Button
                android:id="@+id/butoniPike"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="."
                />
            <Button
                android:id="@+id/butoni0"
                android:layout_width="70dp"
                android:layout_margin="10dp"
                android:layout_height="wrap_content"
                android:text="0"
                />
            <Button
                android:id="@+id/butoniC"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="C"
                />
            <Button
                android:id="@+id/butoniPjestim"
                android:layout_width="100dp"
                android:layout_margin="10dp"
                android:layout_height="wrap_content"
                android:text="/"
                />

        </LinearLayout>
        <Button
            android:id="@+id/kalkulo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:text="CALCULATE"/>
    </LinearLayout>




</LinearLayout>